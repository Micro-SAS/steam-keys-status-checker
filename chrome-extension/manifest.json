{
  "manifest_version": 3,
  "name": "Steam Keys Checker",
  "version": "1.1.0",
  "description": "Vérifiez automatiquement le statut de vos clés Steam via Steamworks Partner",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "https://partner.steamgames.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://partner.steamgames.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Steam Keys Checker",
    "default_icon": "icons/icon.png"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://partner.steamgames.com/*"]
    }
  ]
} 